{{#each this}}
 <li class="card__film" data-action='{{id}}'>
    <img src="https://image.tmdb.org/t/p/w500{{poster_path}}" alt="{{title}} {{name}}" width="100%" data-id="{{id}}"/>
      <h2 class="card__title">{{title}} {{name}}</h4>
       <p class="card__text">
          <span>{{#each genre_ids}} {{name}}{{#unless @last}},{{/unless}}{{/each}}</span> | <span>{{release_date}}</span> <span class="card__vote_average">{{vote_average}}</span>
       </p>
 </li>
{{/each}}

